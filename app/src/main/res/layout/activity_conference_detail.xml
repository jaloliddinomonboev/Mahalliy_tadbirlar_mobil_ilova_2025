<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Sarlavha -->
    <TextView
        android:id="@+id/titleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KONFERENSIYA"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Chiqish tugmasi (chap tomonda) -->
    <Button
        android:id="@+id/confButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orqaga"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_below="@id/titleHome"/>

    <!-- Qo'shish tugmasi (o'ng tomonda) -->
    <Button
        android:id="@+id/confButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qo'shish"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/titleHome"/>

    <!-- Markaziy CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/Venue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confButton1"
        android:layout_margin="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BIZ SIZNING MAXSUS TADBIRLARINGIZNI REJALAYMIZ"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/conference"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ko'pincha bir necha kun davom etadigan, ma'lum bir mavzuda yoki umumiy manfaatga ega bo'lgan odamlarni birlashtirish uchun tashkil etiladigan uchrashuv."
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_5"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
