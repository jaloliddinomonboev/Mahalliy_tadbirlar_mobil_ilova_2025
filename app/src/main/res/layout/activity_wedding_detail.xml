<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeddingDetail">

    <!-- Sarlavha -->
    <TextView
        android:id="@+id/titleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO'Y"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Chiqish tugmasi -->
    <Button
        android:id="@+id/wedbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orqaga"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_below="@id/titleHome"
        android:layout_marginTop="12dp"/>

    <!-- Qo‘shish tugmasi -->
    <Button
        android:id="@+id/wedbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qo'shish"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/titleHome"
        android:layout_marginTop="12dp"/>

    <!-- ScrollView barcha elementlarni ekranga sig‘dirish uchun -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wedbutton1"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/Venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- CardView sarlavhasi -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BIZ SIZNING MAXSUS TADBIRLARINGIZNI REJALAYMIZ"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:paddingBottom="10dp"/>

                    <!-- Tadbir rasmi -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/wedding"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_marginBottom="10dp"/>

                    <!-- Tadbir haqida ma'lumot -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="O‘zbek to‘yi – xalqimizning eng muhim va tantanali marosimlaridan biri bo‘lib, boy urf-odatlar, milliy an’analar va ko‘tarinki kayfiyat bilan o‘tadi."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingBottom="10dp"/>

                    <!-- Maxsus belgilar rasmi -->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/img_3"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
